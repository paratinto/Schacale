' Gambas class file
atomtable AS NEW Variant[]

PUBLIC SUB _new()

  DIM data AS Stream
  DIM dline AS String
  DIM aline AS String[]

  
  data = OPEN "data/atoms.db" FOR INPUT 
  
    WHILE NOT Eof(data)
      LINE INPUT #data, dline
      aline = Split(dline, ";")
      atomtable.add(aline)
    WEND
  CLOSE #data
  
  PRINT Time & " -> [Object] Atoms initialized" 
  
END

PUBLIC FUNCTION getWeight(elem AS String) AS Float
  
  DIM i AS Integer
  
  FOR i = 0 TO atomtable.length - 1
    IF atomtable[i][0] = elem THEN RETURN atomtable[i][1]
  NEXT
  
END

STATIC PUBLIC SUB _exit()
  
    PRINT Time & " -> [Object] Atoms closed"
    
END


